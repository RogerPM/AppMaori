<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Código</th>
      <th>Descripción</th>
      <th>Precio de compra</th>
      <th>Precio de venta</th>
      <th>Stock</th>
      <th>Stock minimo</th>
      <th>Ganancia</th>
      <th>Proveedor</th>
      <th>Tipo</th>
      <th>Estado</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <div id="brands">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.purchase_price) %></td>
        <td><%= number_to_currency(product.sale_price) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.minimun_quantity %></td>
        <td><%= product.gain %></td>
        <td><%= product.provider ? product.provider.name : '' %></td>
        <td><%= product.type %></td>
        <td><%= product.state %></td>
        <td>
          <%= button_to edit_product_path(product), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to product, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>