
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(product) do |f| %>
        <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Descripcion" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, autofocus: true, placeholder: "Descripcion", class: "form-control" %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :purchase_price, "Precio de compra" %>
          </div>
          <div class="col-xs-10">
            <%= f.number_field :purchase_price, placeholder: "Precio de compra", class: "form-control" , :step => 0.01%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :sale_price, "Precio de venta" %>
          </div>
          <div class="col-xs-10">
            <%= f.number_field :sale_price, placeholder: "Precio de venta", class: "form-control" , :step => 0.01%>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :quantity, "Stock" %>
          </div>
          <div class="col-xs-10">
            <%= f.number_field :quantity, placeholder: "Stock", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :minimun_quantity, "Stock minimo" %>
          </div>
          <div class="col-xs-10">
            <%= f.number_field :minimun_quantity, placeholder: "Stock minimo", class: "form-control" %>
          </div>
        </div>



        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :provider_id, "Proveedor" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :provider_id, @providers, :id, :name,
                  {selected: @product.provider_id, include_blank: 'Seleccione Proveedor'}, 
                  {class: "form-control"} %>
          </div>
        </div>



        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>