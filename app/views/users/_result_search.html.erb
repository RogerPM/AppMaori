<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Apellido</th>
   <th>Cedula</th>
   <th>Telefono</th>
   <th>Direccion</th>
   <th>Email</th>
   <th>Estado</th>

   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="brands">
   <% @users.each do |user| %>
    <tr>
     <td><%= user.name %></td>
     <td><%= user.last_name %></td>
     <td><%= user.identification_card %></td>
     <td><%= user.phone %></td>
     <td><%= user.address %></td>
     <td><%= user.email %></td>
     <td><%= user.state %></td>
     <td>
      <%= button_to edit_user_path(user), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to user, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>