<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Ruc</th>
   <th>Telefono</th>
   <th>Direccion</th>
   <th>Email</th>
   <th>Estado</th>

   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="brands">
   <% @providers.each do |provider| %>
    <tr>
     <td><%= provider.name %></td>
     <td><%= provider.ruc %></td>
     <td><%= provider.phone %></td>
     <td><%= provider.address %></td>
     <td><%= provider.email %></td>
     <td><%= provider.state %></td>
     <td>
      <%= button_to edit_provider_path(provider), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to provider, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>