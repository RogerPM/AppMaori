
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(@service) do |f| %>
        <% if @service.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

            <ul>
            <% service.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Nombre" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :description, "Descripcion" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :description, autofocus: true, placeholder: "Descripcion", class: "form-control" %>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>