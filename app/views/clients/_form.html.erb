
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(@client) do |f| %>
        <% if @client.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

            <ul>
            <% client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Nombres" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, autofocus: true, placeholder: "Nombres", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :last_name, "Apellidos" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :last_name, placeholder: "Apellidos", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :identification_card, "Cedula" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :identification_card, placeholder: "Cedula", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :identification_card, "Genero" %>
          </div>
          <div class="col-xs-10">
            <%= f.select :identification_card, options_for_select([["Femenino","femenino"],["Masculino","masculino"],["Otro","otro"]]), placeholder: "Seleccione un genero", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :email, "Correo electronico" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :email, placeholder: "escriba un correo", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :birthday, "Fecha de nacimiento" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_select :birthday, placeholder: "Fecha de nacimiento", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :phone, "Telefono" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :phone, placeholder: "Telefono", class: "form-control" %>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :address, "Direccion" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_area :address, placeholder: "Direccion", class: "form-control" %>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :country, "Pais" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :country, placeholder: "Seleccione un pais", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :province, "Provincia" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :province, placeholder: "Seleccione una provincia", class: "form-control" %>
          </div>
        </div>

                <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :city, "Ciudad" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :city, placeholder: "Seleccione una ciudad", class: "form-control" %>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>