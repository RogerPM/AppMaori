<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Apellido</th>
   <th>Cedula</th>
   <th>Genero</th>
   <th>Telefono</th>
   <th>Email</th>
   <th>Direccion</th>
   <th>Fecha de nacimiento</th>
   <th>Estado</th>

   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="brands">
   <% @clients.each do |client| %>
    <tr>
     <td><%= client.name %></td>
     <td><%= client.last_name %></td>
     <td><%= client.identification_card %></td>
     <td><%= client.gender %></td>
     <td><%= client.phone %></td>
     <td><%= client.email %></td>
     <td><%= client.address %></td>
     <td><%= client.birthday %></td>
     <td><%= client.state %></td>
     <td>
      <%= button_to edit_client_path(client), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to client, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>